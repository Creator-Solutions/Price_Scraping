@model IEnumerable<Product>

@{
    ViewData["Title"] = "Dashboard";
    var address = ViewData["Products"] as Product;
}



<div class="pageContainer">
    
    <div class="topBar">
        <h3>Dashboard</h3>
        <p class="title">Welcome Scraper</p>
    </div>

    <div class="infoBlock">
        <div class="block">
            <div class="topContainer">
                <p class="title">Total Products Found</p>
            </div>           
            <div class="bottomContainer">
                <p class="infoValue">@ViewData["TotalProducts"]</p>                       
            </div>
        </div>
        <div class="block">
            <div class="topContainer">
                <p class="title">Last Date Searched</p>
            </div>
            <div class="bottomContainer">
                <p class="infoDateValue">@ViewData["DateSearched"]</p>        
            </div>
        </div>
        <div class="block">
            <div class="topContainer">
                <p class="title">Total Products Found</p>
            </div>
            <div class="bottomContainer">
                <p class="infoValue">450</p>
                <div class="status">
                    <img src="~/arrow_up.png" />
                    <span class="statusIndicator">20%</span>
                </div>
            </div>
        </div>
    </div>  

    <div class="recentProducts">
        <div class="recentTopContainer">
            <span class="title">Recent Products</span>
        </div>
        <div class="content">
            <table>
                <tr class="tableHead">
                    <th>Product Number</th>
                    <th>Product Name</th>
                    <th>Date Searched</th>
                    <th>Product Price</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr class="tableBody">
                        <td>@Html.DisplayFor(modelItem => item.ProductId)</td>
                        <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                        <td>@Html.DisplayFor(modelItem => item.DateSearched)</td>
                        <td>@Html.DisplayFor(modelItem => item.ProductPrice)</td>
                    </tr>
                }
            </table>
        </div>
    </div>

</div>
